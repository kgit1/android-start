<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a.highorlow.MainActivity">

    <TextView
        android:id="@+id/textResult"
        android:layout_width="254dp"
        android:layout_height="46dp"
        android:gravity="center"
        android:text="result"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/textEnter"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/buttonCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:onClick="functionHighOrLow"
        android:text="Check"
        app:layout_constraintLeft_toRightOf="@+id/textEnter"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        android:layout_marginTop="51dp" />

    <EditText
        android:id="@+id/textEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter your number"
        android:inputType="textPersonName"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="211dp"
        android:layout_height="32dp"
        android:layout_marginTop="21dp"
        android:text="Can you gues it?"
        app:layout_constraintRight_toRightOf="@+id/textView1"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        android:layout_marginRight="73dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="284dp"
        android:layout_height="23dp"
        android:layout_marginTop="27dp"
        android:text="I'm thinking of a number betweeen 1 and 20"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="279dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />
</android.support.constraint.ConstraintLayout>
