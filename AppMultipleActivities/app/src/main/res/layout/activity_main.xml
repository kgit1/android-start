<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a.appmultipleactivities.MainActivity">

    <TextView
        android:layout_width="295dp"
        android:layout_height="74dp"
        android:gravity="center"
        android:text="Main_Activity"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036"
        app:layout_constraintHorizontal_bias="0.505" />

    <Button
        android:id="@+id/buttonSwitchToSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="90dp"
        android:onClick="functionButtonSwitch"
        android:text="switch activity to second"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="351dp"
        android:layout_height="178dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSwitchToSecond"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/textName1"
            android:layout_width="184dp"
            android:layout_height="88dp"
            android:layout_column="0"
            android:layout_row="0"
            android:gravity="center"
            android:onClick="functionItemClicked"
            android:text="TextViewName1" />

        <TextView
            android:id="@+id/textName2"
            android:layout_width="184dp"
            android:layout_height="88dp"
            android:layout_column="1"
            android:layout_row="0"
            android:gravity="center"
            android:onClick="functionItemClicked"
            android:text="TextViewName2" />

        <TextView
            android:id="@+id/textName3"
            android:layout_width="184dp"
            android:layout_height="88dp"
            android:layout_column="0"
            android:layout_row="1"
            android:gravity="center"
            android:onClick="functionItemClicked"
            android:text="TextViewName3" />

        <TextView
            android:id="@+id/textName4"
            android:layout_width="184dp"
            android:layout_height="88dp"
            android:layout_column="1"
            android:layout_row="1"
            android:gravity="center"
            android:onClick="functionItemClicked"
            android:text="TextViewName4" />
    </GridLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="165dp"
        android:layout_height="178dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.039"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grid" />

</android.support.constraint.ConstraintLayout>
