<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#560f86"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.robpercival.demoapp.MainActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="My Great App"
        android:textAlignment="center"
        android:textColor="#20ed3b"
        android:textSize="46sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickFunction"
        android:text="Log In"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/myPasswordField"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/myTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fbf8f8"
        android:ems="10"
        android:hint="Enter your name"
        android:inputType="textPersonName"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

    <EditText
        android:id="@+id/myPasswordField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fcfbfb"
        android:ems="10"
        android:hint="Enter password"
        android:inputType="textPassword"
        android:textColor="#f6061a"
        android:textColorHint="#fb0303"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/myTextField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
